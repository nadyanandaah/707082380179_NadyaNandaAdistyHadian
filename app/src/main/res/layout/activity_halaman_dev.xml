<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@drawable/halamandeveloper2"
    tools:context=".Halaman_Dev">



    <Space
        android:layout_width="match_parent"
        android:layout_height="100dp" />


    <de.hdodenhof.circleimageview.CircleImageView
        android:id="@+id/profile_image"
        android:layout_width="170dp"
        android:layout_height="170dp"
        android:src="@drawable/naddd"
        android:layout_marginLeft="120dp"
        app:civ_border_width="5dp"
        app:civ_border_color="@color/coklat" />

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp"
        android:text="Nadya Nanda Adisty Hadian"
        android:textStyle="bold"
        android:textSize="23dp"
        android:textAlignment="center"
        android:textColor="@color/white" />

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:text="707082380179"
        android:textStyle="normal"
        android:textSize="15dp"
        android:textAlignment="center"
        android:textColor="@color/white" />

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:text="S1 Terapan Digital Multimedia"
        android:textStyle="normal"
        android:textSize="15dp"
        android:textAlignment="center"
        android:textColor="@color/white" />

    <TextView
        android:layout_width="300dp"
        android:layout_height="60dp"
        android:layout_marginLeft="60dp"
        android:layout_marginTop="30dp"
        android:background="@drawable/custom_input_login"
        android:drawableStart="@drawable/ic_email"
        android:paddingVertical="20dp"
        android:drawablePadding="15dp"
        android:paddingTop="20dp"
        android:paddingStart="30dp"
        android:text="nadyanandaah@gmail.com"
        android:textColor="@color/coklat"
        android:textSize="15sp"
        android:textStyle="bold" />


    <TextView
        android:layout_width="300dp"
        android:layout_height="60dp"
        android:layout_marginLeft="60dp"
        android:layout_marginTop="30dp"
        android:background="@drawable/custom_input_login"
        android:drawableStart="@drawable/ic_email"
        android:paddingVertical="20dp"
        android:drawablePadding="15dp"
        android:paddingTop="20dp"
        android:paddingStart="30dp"
        android:text="(+62) 85xxxxxxxxx"
        android:textColor="@color/coklat"
        android:textSize="15sp"
        android:textStyle="bold" />

    <TextView
        android:layout_width="300dp"
        android:layout_height="60dp"
        android:layout_marginTop="30dp"
        android:paddingStart="30dp"
        android:paddingEnd="12dp"
        android:textColor="@color/coklat"
        android:textStyle="bold"
        android:layout_marginLeft="60dp"
        android:background="@drawable/custom_input_login"
        android:drawablePadding="15dp"
        android:textSize="15sp"
        />

</LinearLayout>
