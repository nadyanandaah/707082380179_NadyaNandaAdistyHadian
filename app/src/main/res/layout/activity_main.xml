<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@color/yellowpastel"
    tools:context=".MainActivity">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <Space
            android:layout_width="match_parent"
            android:layout_height="50dp" />

        //Lottie
        <com.airbnb.lottie.LottieAnimationView
            android:id="@+id/animation_view"
            android:layout_width="350dp"
            android:layout_height="200dp"
            android:layout_marginLeft="30dp"
            app:lottie_autoPlay="true"
            app:lottie_loop="true"
            app:lottie_rawRes="@raw/farmer"
            tools:ignore="MissingConstraints" />

        <TextView
            android:id="@+id/textView1"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="BUKU SAKU PETANI"
            android:textStyle="bold"
            android:textSize="25dp"
            android:textAlignment="center"
            android:textColor="@color/black" />

        <Space
            android:layout_width="match_parent"
            android:layout_height="40dp" />

        //Button
        <android.widget.Button
            android:id="@+id/button1"
            android:layout_width="200dp"
            android:layout_height="60dp"
            android:layout_marginLeft="110dp"
            android:background="@drawable/custom_button2"
            android:text="LOGIN"
            android:textSize="18dp"
            android:textColor="@color/white" />

        <android.widget.Button
            android:id="@+id/button2"
            android:layout_width="200dp"
            android:layout_height="60dp"
            android:layout_marginLeft="110dp"
            android:layout_marginTop="30dp"
            android:background="@drawable/custom_button2"
            android:text="REGISTER"
            android:textSize="18dp"
            android:textColor="@color/white" />

        <TextView
            android:id="@+id/textView2"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="50dp"
            android:text="by"
            android:textStyle="italic"
            android:textSize="15dp"
            android:textAlignment="center"
            android:textColor="@color/black" />

        <android.widget.Button
            android:id="@+id/button3"
            android:layout_width="200dp"
            android:layout_height="30dp"
            android:layout_marginLeft="110dp"
            android:layout_marginTop="10dp"
            android:background="@drawable/custom_button2"
            android:text="Nadya Nanda Adisty Hadian"
            android:textSize="11dp"
            android:textColor="@color/white" />

        <Space
            android:layout_width="match_parent"
            android:layout_height="30dp" />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Review Aplikasi"
            android:textStyle="italic"
            android:textSize="15dp"
            android:layout_marginLeft="290dp"
            android:textColor="@color/black" />

        <android.widget.Button
            android:id="@+id/button4"
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:layout_marginLeft="330dp"
            android:background="@drawable/custombutton_deskripsi"
            android:text="REVIEW"
            android:textColor="@color/black"
            android:textSize="11dp" />

    </LinearLayout>

</LinearLayout>